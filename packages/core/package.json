{
  "name": "@blueking/status-tag",
  "version": "1.0.3",
  "description": "A framework-agnostic Status Tag Web Component with i18n support",
  "type": "module",
  "main": "./dist/status-tag.umd.js",
  "module": "./dist/status-tag.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/status-tag.mjs",
      "require": "./dist/status-tag.umd.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/style.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "web-component",
    "status-tag",
    "i18n",
    "framework-agnostic",
    "typescript",
    "shadow-dom",
    "custom-elements",
    "lit-element"
  ],
  "author": "Vincent Ko",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/forrany/status-tag-component.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/forrany/status-tag-component#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit"
  },
  "peerDependencies": {
    "lit": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "sass-embedded": "^1.93.3",
    "terser": "^5.44.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "lit": "^3.3.1"
  }
}
