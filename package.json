{
  "name": "@blueking/status-tag-monorepo",
  "version": "1.0.2",
  "private": true,
  "description": "Status Tag Web Component Monorepo",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter=@blueking/status-tag-playground dev",
    "dev:core": "pnpm --filter=@blueking/status-tag dev",
    "build": "pnpm -r --filter=./packages/* build",
    "build:core": "pnpm --filter=@blueking/status-tag build",
    "build:playground": "pnpm --filter=@blueking/status-tag-playground build",
    "publish:core": "pnpm build:core && pnpm --filter=@blueking/status-tag publish --no-git-checks",
    "clean": "pnpm -r exec rm -rf dist && rm -rf node_modules",
    "type-check": "pnpm -r --filter=./packages/* run type-check"
  },
  "keywords": [
    "web-component",
    "status-tag",
    "monorepo",
    "lit-element"
  ],
  "author": "Vincent Ko",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/forrany/status-tag-component.git"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.12.1",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "sass-embedded": "^1.93.3",
    "terser": "^5.44.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "lit": "^3.3.1"
  }
}
